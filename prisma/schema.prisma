generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id          String   @id
  title       String
  author      String
  genreId     String
  genre       Genre    @relation(fields: [genreId], references: [id])
  year        Int
  pages       Int
  rating      Int
  synopsis    String
  coverUrl    String
  status      ReadingStatus @default(QUERO_LER)
  currentPage Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isbn        String?  // opcional
  notes       String?  // opcional
}

model Genre {
  id    String  @id
  name  String  @unique
  books Book[]
}

enum ReadingStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}